<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Dutch Auction System</title>
</head>

<body onload="timer()">

    <header>
        DUTCH AUCTION SYSTEM
    </header>

    <div id="nft-info">
        <img src="uploads/images/s.png" alt="An image" width="200px" />
        <br /><br />
        File: S.png <br />
        SHA-256 Hash: fbkjadfbkjfbsdkjgbsjkghfjghfjkghriutue843857489789trhgkjf
        <br />
        Current Price: <span id="price">
            <h3>400$</h3>
        </span>
        <br />

        <button onclick="stopTimer();">BUY NOW!</button>
    </div>

    <script>
        var stop;
        function timer(interval = 5000) {

            stop = false;

            function loop(count = 1) {

                if (stop) {
                    return;
                }

                document.getElementById("price").innerHTML = "<h3>" + count + "</h3>";
                console.log(count);
                setTimeout(loop, interval, ++count);
            }
            loop();
        }

        function stopTimer() {
            stop = true;
            window.alert("You have bought the file!");
        }


    </script>




</body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>


</html>